########################################################################################################################
# Quality checks
########################################################################################################################

test:
	poetry run pytest tests

ruff:
	poetry run ruff check src tests

fix-ruff:
	poetry run ruff check src tests --fix

mypy:
	poetry run mypy src

########################################################################################################################
# Api
########################################################################################################################

start-api:
	docker compose up -d

dev-api:
	PYTHONPATH=. poetry run python src/main.py

########################################################################################################################
# Streamlit
########################################################################################################################

start-app:
	PYTHONPATH=. streamlit run demo/main.py




